`timescale 1 ps/ 1 ps
module orgate_vlg_sample_tst(
	PB1,
	PB2,
	sampler_tx
);
input  PB1;
input  PB2;
output sampler_tx;

reg sample;
time current_time;
always @(PB1 or PB2)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module orgate_vlg_check_tst (
	LED,
	sampler_rx
);
input  LED;
input sampler_rx;

reg  LED_expected;

reg  LED_prev;

reg  LED_expected_prev;

reg  last_LED_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	LED_prev = LED;
end

// update expected /o prevs

always @(trigger)
begin
	LED_expected_prev = LED_expected;
end



// expected LED
initial
begin
	LED_expected = 1'bX;
end 
// generate trigger
always @(LED_expected or LED)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected LED = %b | ",LED_expected_prev);
	$display("| real LED = %b | ",LED_prev);
`endif
	if (
		( LED_expected_prev !== 1'bx ) && ( LED_prev !== LED_expected_prev )
		&& ((LED_expected_prev !== last_LED_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port LED :: @time = %t",  $realtime);
		$display ("     Expected value = %b", LED_expected_prev);
		$display ("     Real value = %b", LED_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_LED_exp = LED_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

module orgate_vlg_vec_tst();
// constants                                           
// general purpose registers
reg PB1;
reg PB2;
// wires                                               
wire LED;

wire sampler;                             

// assign statements (if any)                          
orgate i1 (
// port map - connection between master ports and signals/registers   
	.LED(LED),
	.PB1(PB1),
	.PB2(PB2)
);

// PB1
initial
begin
	PB1 = 1'b1;
	# 5000;
	repeat(99)
	begin
		PB1 = 1'b0;
		PB1 = #5000 1'b1;
		# 5000;
	end
	PB1 = 1'b0;
end 

// PB2
always
begin
	PB2 = 1'b0;
	PB2 = #10000 1'b1;
	#10000;
end 

orgate_vlg_sample_tst tb_sample (
	.PB1(PB1),
	.PB2(PB2),
	.sampler_tx(sampler)
);

orgate_vlg_check_tst tb_out(
	.LED(LED),
	.sampler_rx(sampler)
);
endmodule

